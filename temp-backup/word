//wap to find a word in a paragrapgh in linear search find its time
package temp-backup.word;
public class word{
    public static void main(String[] args) {
        String paragraph = "This is a sample paragraph to search for a word.";
        String wordToFind = "sample";
        int index = linearSearch(paragraph, wordToFind);
        if (index != -1) {
            System.out.println("Word found at index: " + index);
        } else {
            System.out.println("Word not found.");
        }
    }

    public static int linearSearch(String paragraph, String word) {
        String[] words = paragraph.split(" ");
        for (int i = 0; i < words.length; i++) {
            if (words[i].equals(word)) {
                return i;
            }
        }
        return -1;
    }
}